
{% extends 'base.html.twig' %}
{% block meta_title %}Book List{% endblock meta_title %}
{% block main_book %}
        <div class="list_book">
            {% for book in books %}
                <div class="listed_book">
                    <h1 class="h1_list">{{ book.title }}</h1>
                    {% if book.author %}
                        <p class="author_list">{{ book.author.FirstName }}</p>
                    {% endif %}
                    <a class="a_list" href="{{ path('book',{'id': book.id}) }}">Voir Plus</a>
                    <br>
                    <br>
                </div>
            {% endfor %}
            </div>
        </div>
{% endblock main_book %}
